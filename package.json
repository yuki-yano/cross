{
  "name": "cross",
  "version": "0.0.1",
  "author": "yuki_yano <yuki.ycino@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "webpack-dev-server --config webpack.dev.js",
    "build": "webpack --config webpack.prod.js",
    "clean": "rimraf frontend/dist",
    "analyze": "webpack --config webpack.prod.js --json | webpack-bundle-size-analyzer && clean",
    "typecheck": "tsc --project . --noEmit #",
    "typecheck:watch": "tsc --project . --noEmit --watch",
    "lint": "esw --fix 'frontend/src/**/*.{ts,tsx}'",
    "lint:strict": "esw --fix --config .eslintrc.strict.js 'frontend/src/**/*.{ts,tsx}'",
    "lint:watch": "onchange --initial 'frontend/src/**/*.{ts,tsx}' -- yarn run esw --clear 'frontend/src/**/*.{ts,tsx}'"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@types/camelcase-keys": "^4.0.0",
    "@types/jest": "^24.0.9",
    "@types/query-string": "^6.2.0",
    "@types/react": "^16.8.6",
    "@types/react-dom": "^16.8.2",
    "@types/react-helmet": "^5.0.8",
    "@types/react-redux": "^7.0.1",
    "@types/react-router": "^4.4.1",
    "@types/react-router-dom": "^4.3.1",
    "@types/redux-logger": "^3.0.6",
    "@types/snakecase-keys": "^2.1.0",
    "@types/styled-components": "^4.1.1",
    "@types/uuid": "^3.4.4",
    "@typescript-eslint/eslint-plugin": "^1.4.0",
    "babel-loader": "^8.0.5",
    "babel-plugin-styled-components": "^1.10.0",
    "css-loader": "^2.1.0",
    "eslint": "^5.15.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-watch": "^4.0.2",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.5",
    "mini-css-extract-plugin": "^0.5.0",
    "onchange": "^5.2.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "style-loader": "^0.23.1",
    "terser-webpack-plugin": "^1.2.3",
    "ts-jest": "^24.0.0",
    "typescript": "^3.3.3333",
    "webpack": "^4.26.0",
    "webpack-bundle-size-analyzer": "^3.0.0",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10",
    "webpack-manifest-plugin": "^2.0.4",
    "webpack-merge": "^4.2.1"
  },
  "dependencies": {
    "@babel/polyfill": "^7.2.5",
    "@rebass/grid": "^6.0.0-7",
    "axios": "^0.18.0",
    "bulma": "^0.7.4",
    "camelcase-keys": "^5.0.0",
    "immer": "^2.0.0",
    "query-string": "^6.2.0",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "react-helmet": "^5.2.0",
    "react-hot-loader": "^4.6.3",
    "react-redux": "^6.0.1",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.1",
    "redux-logger": "^3.0.6",
    "redux-persist": "^5.10.0",
    "redux-thunk": "^2.3.0",
    "reselect": "^4.0.0",
    "snakecase-keys": "^2.1.0",
    "styled-components": "^4.1.1",
    "uuid": "^3.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --config .eslintrc.strict.js --fix",
      "git add"
    ],
    "*.{ts,tsx}": [
      "yarn run typecheck",
      "prettier --write",
      "eslint --config .eslintrc.strict.js --fix",
      "git add"
    ],
    "*.{json,css}": [
      "prettier --write",
      "git add"
    ]
  }
}
